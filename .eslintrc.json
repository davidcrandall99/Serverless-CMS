{
    "env": {
        "browser": false,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "block-spacing": [
            "error",
            "always"
        ],
        "no-console" : 0,
        "no-unused-vars": 1,
        "no-useless-escape": 2,
        "no-irregular-whitespace":2,
        "no-trailing-spaces": 2,
        "no-whitespace-before-property" : 2,
        "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 0 }]
        
    }
}